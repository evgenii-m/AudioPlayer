<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<Pane fx:controller="ru.push.caudioplayer.controller.AudioPlayerController" prefHeight="60.0" stylesheets="/css/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="mediaButtonsControl" spacing="5.0" styleClass="media-buttons-control">
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
         <children>
            <Button fx:id="stopButton" styleClass="media-player-button" mnemonicParsing="false" onAction="#stopAction"/>
            <Button fx:id="playButton" styleClass="media-player-button" mnemonicParsing="false" onAction="#playAction"/>
            <Button fx:id="pauseButton" styleClass="media-player-button" mnemonicParsing="false" onAction="#pauseAction"/>
            <Button fx:id="prevButton" styleClass="media-player-button" mnemonicParsing="false" onAction="#prevAction"/>
            <Button fx:id="nextButton" styleClass="media-player-button" mnemonicParsing="false" onAction="#nextAction"/>
            <Slider fx:id="positionSlider" prefHeight="20.0" prefWidth="460.0">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" top="10.0" />
               </HBox.margin>
            </Slider>
            <Label fx:id="trackTimeLabel" prefHeight="16.0" prefWidth="80.0" text="0:00/0:00" textFill="#fff9f9">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" top="10.0" />
               </HBox.margin>
            </Label>
            <Slider fx:id="volumeSlider" prefHeight="16.0" prefWidth="140.0">
               <HBox.margin>
                  <Insets left="10.0" right="5.0" top="10.0" />
               </HBox.margin>
            </Slider>
         </children>
      </HBox>
   </children>
</Pane>
