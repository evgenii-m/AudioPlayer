<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane stylesheets="/css/style.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
	  fx:controller="ru.push.caudioplayer.controller.AudioPlayerController">
	<children>
		<HBox fx:id="mediaButtonsControl" prefHeight="50.0" spacing="5.0" styleClass="media-buttons-control">
			<padding>
				<Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
			</padding>
			<children>
				<Button fx:id="stopButton" mnemonicParsing="false" onAction="#stopAction"
						styleClass="media-player-button"/>
				<Button fx:id="playButton" mnemonicParsing="false" onAction="#playAction"
						styleClass="media-player-button"/>
				<Button fx:id="pauseButton" mnemonicParsing="false" onAction="#pauseAction"
						styleClass="media-player-button"/>
				<Button fx:id="prevButton" mnemonicParsing="false" onAction="#prevAction"
						styleClass="media-player-button"/>
				<Button fx:id="nextButton" mnemonicParsing="false" onAction="#nextAction"
						styleClass="media-player-button"/>
				<Slider fx:id="positionSlider" prefHeight="20.0" prefWidth="460.0">
					<HBox.margin>
						<Insets left="5.0" right="5.0" top="10.0"/>
					</HBox.margin>
				</Slider>
				<Label fx:id="trackTimeLabel" prefHeight="16.0" prefWidth="80.0" text="0:00/0:00" textFill="#fff9f9">
					<HBox.margin>
						<Insets left="5.0" right="5.0" top="10.0"/>
					</HBox.margin>
				</Label>
				<Slider fx:id="volumeSlider" prefHeight="16.0" prefWidth="140.0">
					<HBox.margin>
						<Insets left="10.0" right="5.0" top="10.0"/>
					</HBox.margin>
				</Slider>
			</children>
		</HBox>
		<Pane layoutY="50.0" prefHeight="40.0" prefWidth="1010.0" styleClass="now-playing-panel">
			<Label fx:id="nowPlayingLabel" layoutX="20.0" layoutY="10.0" prefHeight="20.0" prefWidth="600.0"
				   styleClass="now-playing-panel-label">
				<font>
					<Font name="System Bold" size="14.0"/>
				</font>
			</Label>
		</Pane>
	</children>
</Pane>
