<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
	  fx:controller="ru.push.caudioplayer.controller.MainController" stylesheets="/css/style.css">
	<children>
		<VBox fx:id="mainContainer" prefHeight="630" prefWidth="1010">
			<children>
				<MenuBar fx:id="mainMenuBar">
					<menus>
						<Menu mnemonicParsing="false" text="Playlist">
							<items>
								<MenuItem mnemonicParsing="false" onAction="#createNewPlaylist" text="New playlist"/>
								<MenuItem mnemonicParsing="false" onAction="#addFilesToPlaylist" text="Add file(s)"/>
								<MenuItem mnemonicParsing="false" onAction="#addStreamToActivePlaylist"
										  text="Add stream"/>
								<MenuItem mnemonicParsing="false" onAction="#backupPlaylists" text="Backup playlists"/>
							</items>
						</Menu>
						<Menu mnemonicParsing="false" text="Last.fm">
							<items>
								<MenuItem mnemonicParsing="false" onAction="#connectLastFm" text="Connect"/>
							</items>
						</Menu>
						<Menu mnemonicParsing="false" text="Deezer">
							<items>
								<MenuItem mnemonicParsing="false" onAction="#connectDeezer" text="Connect"/>
							</items>
						</Menu>
						<Menu mnemonicParsing="false" text="Help">
							<items>
								<MenuItem mnemonicParsing="false" text="About"/>
							</items>
						</Menu>
					</menus>
				</MenuBar>

				<Pane fx:id="audioPlayerComponentPane" prefHeight="80.0" prefWidth="1010.0"/>

				<Pane fx:id="playlistComponentPane" prefHeight="310.0" prefWidth="1010.0">
					<VBox.margin>
						<Insets top="5.0"/>
					</VBox.margin>
				</Pane>

				<TabPane fx:id="extraPanelsTabPane" prefHeight="220.0" prefWidth="1000.0" side="BOTTOM"
						 tabClosingPolicy="UNAVAILABLE" styleClass="extra-panels-tab-pane">
					<tabs>
						<Tab fx:id="lastfmPanelTab" closable="false" text="Last.m" styleClass="tab-pane-item">
						</Tab>
						<Tab fx:id="notificationsPanelTab" closable="false" text="Notifications"
							 styleClass="tab-pane-item">
							<content>
								<Pane prefHeight="30.0" styleClass="notification-panel"/>
							</content>
						</Tab>
					</tabs>
					<VBox.margin>
						<Insets left="10.0" right="10.0" top="10.0"/>
					</VBox.margin>
				</TabPane>

			</children>
		</VBox>
	</children>
</Pane>
