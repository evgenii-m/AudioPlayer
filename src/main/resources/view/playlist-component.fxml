	<children>
		<HBox fx:id="playlistBlockContainer" prefWidth="1000.0" spacing="5.0">
			<children>
				<Pane prefHeight="300" prefWidth="290.0">
					<HBox prefHeight="25.0" prefWidth="290.0" spacing="7.0">
						<children>
							<Button onAction="#createNewPlaylist" styleClass="playlist-browser-control-button">New</Button>
							<Button onAction="#refreshPlaylists" styleClass="playlist-browser-control-button">Refresh</Button>
							<Button onAction="#addFilesToPlaylist" styleClass="playlist-browser-control-button">Add file(s)</Button>
