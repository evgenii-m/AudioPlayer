						</children>
						<padding>
							<Insets left="5.0" right="5.0" />
						</padding>
					</HBox>
					<TabPane fx:id="playlistBrowserTabPane" layoutY="30.0" nodeOrientation="LEFT_TO_RIGHT" pickOnBounds="false" prefHeight="270.0" prefWidth="290.0" rotateGraphic="true" side="LEFT" tabClosingPolicy="UNAVAILABLE">
						<tabs>
							<Tab fx:id="localPlaylistsTab" closable="false" styleClass="tab-pane-item" text="LOCAL">
								<content>
									<ListView fx:id="localPlaylistBrowserContainer" prefHeight="300.0" prefWidth="250.0" styleClass="playlist-browser-container">
									</ListView>
								</content>
							</Tab>
							<Tab fx:id="deezerPlaylistsTab" closable="false" styleClass="tab-pane-item" text="DEEZER">
								<content>
									<ListView fx:id="deezerPlaylistBrowserContainer" prefHeight="300.0" prefWidth="250.0" styleClass="playlist-browser-container">
									</ListView>
								</content>
							</Tab>
						</tabs>
						<opaqueInsets>
							<Insets />
						</opaqueInsets>
						<padding>
							<Insets left="5.0" />
						</padding>
					</TabPane>
				</Pane>
				<TableView fx:id="playlistContentContainer" prefHeight="250.0" prefWidth="700.0">
					<columns>
					</columns>
				</TableView>
			</children>
			<padding>
				<Insets left="5.0" />
			</padding>
		</HBox>
	</children>
</Pane>
